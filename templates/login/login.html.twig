{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<h1>Connexion</h1>
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('app_login') }}" method="post">
		<fieldset>
			<div class="form-group">
				<label for="exampleInputEmail1" class="form-label mt-4">Nom d'utilisateur</label>
				<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" name="_password">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button type="submit" class="btn btn-primary mt-2">Connexion</button>


		{# If you want to control the URL the user is redirected to on success
												        <input type="hidden" name="_target_path" value="/account"> #}


	</form>
{% endblock %}
