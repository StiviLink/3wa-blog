{% extends "base.html.twig" %}

{% block body %}
    <div>
		<div class="card mb-3">
			<h3 class="card-header">{{ post.title }}</h3>
			<img src="{{ post.image }}" alt="{{ post.title }}">
			<div class="card-body">
				<p class="card-text">{{ post.description}}</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">{{ post.user.username }}</li>
			</ul>
			<div class="card-footer text-muted">
				{{ post.createdAt | date('d/m/Y') }}
			</div>
		</div>
		{% if app.user %}
			{{ form_start(form)}}
			{{ form_row(form.content)}}
			{{ form_end(form)}}
		{% endif %}
		{% for comment in comments %}
			<div class="card border-primary mb-3" style="max-width: 20rem;">
				<div class="card-header">{{ comment.createdAt | date('d/m/Y Ã  H:i') }}
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('comment_delete', {'id': comment.id}) }}?token={{ csrf_token('comment' ~ comment.id) }}">ğŸ—‘ï¸</a>
					{% endif %}
				</div>
				<div class="card-body">
					<h4 class="card-title">{{ comment.user.username }}</h4>
					<p class="card-text">{{ comment.content }}</p>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}